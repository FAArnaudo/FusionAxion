<Window x:Class="FusionAxion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FusionAxion"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Controlador de Surtidores" Height="350" Width="500"
        ResizeMode="CanMinimize" MouseDown="Window_MouseDown">
    <Grid x:Name="GMain">
        <!--#region TOP GRID-->
        <Grid Width="500" Height="30" Background="#013220"
              VerticalAlignment="Top">
            <!--#region BUTTON-->
            <Button Grid.Row="0" Grid.Column="2" Name="BtnCerrar"
                    Width="35" Height="30"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Background="#1B1448" BorderBrush="#007ED6"
                    Click="BtnCerrar_Click">
                <TextBlock Text="X" Foreground="White" FontSize="20"></TextBlock>
            </Button>
            <Button Grid.Row="0" Grid.Column="2" Name="BtnMinimizar"
                    Width="35" Height="30"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,35,0"
                    Background="#1B1448" BorderBrush="#007ED6"
                    Click="BtnMinimizar_Click">
                <TextBlock Text="-" Foreground="White" FontSize="20"></TextBlock>
            </Button>
            <!--#endregion-->
            <!--#region TITLE-->
            <TextBlock Text="InterAxion"
                           Height="30" Width="94"
                           HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="35,0,0,0"
                           FontSize="20" Foreground="White"></TextBlock>
            <!--#endregion-->
            <!--#region IMAGE-->
            <!--#endregion-->
        </Grid>
        <!--#endregion-->
        <!--#region GRID BUTTONS-->
        <!--#endregion-->
    </Grid>
</Window>
